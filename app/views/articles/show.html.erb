
<div class="container">

  <div class="col-md-8">   

        <h1>Showing Article Details</h1>
        <p><strong>Title: </strong> <%= @article.title %></p>
        <p><strong>Description: </strong><%= @article.description %></p>
        
        <%=  link_to 'Edit',  edit_article_path(@article.id),  class: "btn btn-outline-info btn-block" %><br>
        <%=  link_to 'Delete',  article_path(@article.id), class: "btn btn-outline-danger btn-block" ,method: :delete, data: {confirm: "Are you sure you want to delete this article?"}  %><br>
        <%=  link_to 'Articles list',  articles_path, class: "btn btn-info btn-block" %>
  </div>
  
</div>            