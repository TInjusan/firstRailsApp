
<div class="container">

  <div class="col-md-8">   
      <div class="row">
        
            <h1>Showing Article Details</h1>
        <div class="col-md-8">  
            <p><strong>Title: </strong> <%= @article.title %></p>
            <p><strong>Description: <br></strong><%= @article.description %></p>
             <p><strong>by: <br></strong><%= @article.user.username if @article.user  %></p>
        </div>     
        <div class="col-md-4">   
         <% if logged_in? && @article.user == current_user %>
            <%=  link_to 'Edit',  edit_article_path(@article.id),  class: "btn btn-outline-info btn-block" %><br>
            <%=  link_to 'Delete',  article_path(@article.id), class: "btn btn-outline-danger btn-block" ,method: :delete, data: {confirm: "Are you sure you want to delete this article?"}  %><br>
         <% end %> 
             <%= link_to '[ Return to articles listing ]', articles_path, class: "text-info" %>   
                 
         </div>   
        <div class="card-footer text-muted">
            <!--Getting the timestamp formatted and displayed to the html-->
                <small>Created <%= time_ago_in_words(@article.created_at) %> ago, 
                edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
        </div>
           
     </div>
  </div>
  
</div>            