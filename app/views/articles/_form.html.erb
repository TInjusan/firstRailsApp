<!-- A partial form file name always starts with underscore -->
 
 <!-- embedded conditional ruby statement for error messaging only -->

   <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <% if @article.errors.any? %>
          <h2>The following errors prevented the article from being saved</h2>
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        <% end %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      <!-- end of embedded conditional ruby statement -->
    </div>
<div class="container">

  <div class="col-md-8">    
      <%= form_with(model: @article, local: true )  do |f| %>
        <p> 
          <%= f.label :title %><br/> 
          <%= f.text_field :title, class: "form-control" %>
        </p>
        
        <p>
          <%= f.label :description %><br/> 
          <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Enter description here" %> 
        </p>
        <p>
          <%= f.submit class: "btn btn-primary" %> 
        </p>
        <% end %>
       <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
  </div>

<div class="col-md-4">
</div>
</div>